<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Restaurant Manager</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Home", home_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Dish", dish_index_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Items", item_index_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Workers", worker_index_path, class: "nav-link"%>
            </li>
          </ul>
          <ul class="nav navbar navbar-expand-lg navbar-right navbar-dark bg-dark">
            <% if signed_in? %>
              <li class="nav-item">
                <a class="nav-link">
                  Signed in as: <%= current_user.email %>
                </a>
              </li>
              <li class="nav-item">
                <%= link_to t(".sign_out"), sign_out_path, method: :delete ,class: "nav-link"  %>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link">
                  <%= link_to t(".sign_in"), sign_in_path %>
                </a>
              </li>
            <% end %>
          </ul>
          <div id="flash">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <%= yield %>
      </div>
    </section>
  </body>
</html>
